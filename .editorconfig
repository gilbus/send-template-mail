# EditorConfig is awesome: http://EditorConfig.org

root = true
# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 88

# Matches multiple files with brace expansion notation
# Set default charset
[*.py}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{md,markdown,rst,ini}]
charset = utf-8
indent_style = space
indent_size = 2
